<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/forumCmItem">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/forumCmImage"
            android:background="@drawable/user_img"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:id="@+id/forumCmUser"
            android:text="gecian user"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#288ebe"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forumCmnt"
            android:textIsSelectable="true"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:text="comment"
            android:textColor="#000"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="20:00"
            android:id="@+id/forumCmTime"
            android:textSize="14sp"
            android:layout_margin="15dp"/>

    </android.support.v7.widget.CardView>

</LinearLayout>