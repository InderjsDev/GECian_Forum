<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginBottom="3dp"
    android:layout_height="wrap_content">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardForum">
        
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:id="@+id/lay1"
            android:weightSum="2">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:layout_gravity="center_horizontal"
               android:layout_weight="1"
               android:src="@drawable/ic_chat_bubble_outline_black_24dp">

               </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/forumVote"
                android:textColor="#1178a7"
                android:layout_marginBottom="5dp"
                android:text="+20"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="55dp"
            android:weightSum="2"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/forumCreatorName"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginRight="30dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:id="@+id/forumTime"
                android:textColor="#027c1a"
                android:layout_marginRight="10dp"
                android:text="2 min ago." />

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/forumDetails"
               android:src="@drawable/three_dots"/>

        </LinearLayout>

        <TextView
            android:layout_width="289dp"
            android:layout_height="35dp"
            android:id="@+id/forumDesc"
            android:text="hello its about the workshop that happened on previous weekend, everything went well."
            android:layout_marginLeft="55dp"
            android:layout_marginRight="30dp"
            android:maxLines="2"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>